@model RDAT.ViewModels.CreateCompanyViewModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">

                        <h1><i class="nav-icon fas fa-th mr-2"></i>View Companies</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Blank Page</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content p-5">

            <h1>Edit</h1>

            <h4>Company</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Company.Id" />
                        <div class="form-group">
                            <label asp-for="Company.Name" class="control-label"></label>
                            <input asp-for="Company.Name" class="form-control" />
                            <span asp-validation-for="Company.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.AddressLine1" class="control-label"></label>
                            <input asp-for="Company.AddressLine1" class="form-control" />
                            <span asp-validation-for="Company.AddressLine1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.AddressLine2" class="control-label"></label>
                            <input asp-for="Company.AddressLine2" class="form-control" />
                            <span asp-validation-for="Company.AddressLine2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.City" class="control-label"></label>
                            <input asp-for="Company.City" class="form-control" />
                            <span asp-validation-for="Company.City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.State" class="control-label"></label>
                            <select asp-for="Company.State" asp-items="Model.States" class="custom-select">
                                <option value="">Choose a State</option>

                            </select>
                            <span asp-validation-for="Company.State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Zip" class="control-label"></label>
                            <input asp-for="Company.Zip" class="form-control" />
                            <span asp-validation-for="Company.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Phone" class="control-label"></label>
                            <input asp-for="Company.Phone" class="form-control" />
                            <span asp-validation-for="Company.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Fax" class="control-label"></label>
                            <input asp-for="Company.Fax" class="form-control" />
                            <span asp-validation-for="Company.Fax" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Dot" class="control-label"></label>
                            <input asp-for="Company.Dot" class="form-control" />
                            <span asp-validation-for="Company.Dot" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.RepresentativeName" class="control-label"></label>
                            <input asp-for="Company.RepresentativeName" class="form-control" />
                            <span asp-validation-for="Company.RepresentativeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Email" class="control-label"></label>
                            <input asp-for="Company.Email" class="form-control" />
                            <span asp-validation-for="Company.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.Modified" class="control-label"></label>
                            <input asp-for="Company.Modified" class="form-control" />
                            <span asp-validation-for="Company.Modified" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Company.Status" class="control-label"></label>
                            <select asp-for="Company.Status" class="custom-select">
                                <option value="">Choose a Status</option>
                                <option value="1">Active</option>
                                <option value="0">Terminated</option>
                            </select>
                            <span asp-validation-for="Company.Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company.OldID" class="control-label"></label>
                            <input asp-for="Company.OldID" class="form-control" />
                            <span asp-validation-for="Company.OldID" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Company.isFavorite" /> @Html.DisplayNameFor(model => model.Company.isFavorite)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Company.isDelete" /> @Html.DisplayNameFor(model => model.Company.isDelete)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </section>
        <!-- /.content -->
    </div>

