@model IEnumerable<RDAT.Models.Driver>

@{
    ViewData["Title"] = "Grid";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(HttpContextAccessor, source: this.Model,
         defaultSort: "DriverName",
         rowsPerPage: 30);
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <h1><i class="nav-icon fas fa-th mr-2"></i>@ViewBag.ListName</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create Batch</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3>@ViewBag.activeDrivers</h3>

                                <p>Total Number of Active Drivers</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person"></i>
                            </div>
                        </div>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>@ViewBag.limit</h3>

                                <p>Total Drivers for Test</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-stalker"></i>
                            </div>
                        </div>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>@ViewBag.percentage<sup style="font-size: 20px">%</sup></h3>

                                <p>Percentage Included</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-pie-graph"></i>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <!-- /.row -->
                
                <div class="row">
                    @if (grid.HasSelection)
                    {
                        var item = (RDAT.Models.Driver)grid.Rows[grid.SelectedIndex].Value;
                        <b>Name</b> @item.DriverName<br />
                    }
                    @grid.GetHtml(tableStyle: "table table-bordered", columns: grid.Columns(
                    grid.Column("", header: " ",
    (item) =>
            (bool)item.IsFavorite
                ? Html.Raw("<a asp-action='Favorite' asp-controller='company'><i class='ion-ios-star'></i></a>")
                : Html.Raw("<a asp-action='Favorite' asp-controller='company'><i class='ion-ios-star-outline'></i></a>")
    ),
     grid.Column("Id"),
     grid.Column("DriverName"),
     grid.Column("City"),
     grid.Column("State"),
     grid.Column("SSN"),
     grid.Column("Phone"),
     grid.Column("Email", header: "Email Address"),
     grid.Column("EnrollmentDate", "Enrollment",
        format: (item) => string.Format("{0:dd-MMM-yyyy}", item.EnrollmentDate)),
     grid.Column("TerminationDate", "Termination",
        format: (item) => string.Format("{0:dd-MMM-yyyy}", item.TerminationDate)),
     grid.Column(
           "",
            header: "Actions",
            format: @<text>@Html.ActionLink("Remove", "Remove", new { id = item.id }, new { @class = "btn btn-info m-1" })</text>
)
)
)
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="card-tools">
                    <button type="button" class="btn btn-success" >
                        Create Batch
                    </button>
                    
                </div>
            
        </div>
        <!-- /.card-footer-->
</div>
<!-- /.card -->
    </section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->
